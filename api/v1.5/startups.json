---
layout: null
---

{ "links":
    { "self": "{{ site.url }}/startups" }
, "data":
    [
    {% for startup in site.startups %}
        { "id"        : "{{ startup.id | remove: '/startups/' }}"
        , "type"      : "startup"
        , "attributes":
            { "name"          : "{{ startup.title }}"
            , "pitch"         : "{{ startup.mission }}"
            , "status"        : "{{ startup.phases.last.name }}"
            , "incubator"     : "{{ startup.incubator}}"
            }
        }
        {% unless forloop.last %},{% endunless %}
    {% endfor %}
    ]
}
